.container
    .row
        .col-md-4.col-md-offset-4
            .login-panel.panel.panel-default
                .panel-heading
                    h3.panel-title Please Sign In
                .panel-body
                    form(role='form', name='LoginForm')
                        fieldset
                            .form-group
                                input.form-control(placeholder='Login', name='login', type='text', autofocus='', ng-model="credentials.login" )
                            .form-group
                                input.form-control(placeholder='Password', name='password', type='password', value='', ng-model="credentials.password")
                            button.btn.btn-lg.btn-success.btn-block(type='submit', ng-click="login(LoginForm)") Login
                            | {{ errors }}

