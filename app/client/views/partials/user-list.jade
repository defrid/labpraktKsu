.container
    .row
        div.table-responsive
            div.panel.panel-default
                div.panel-heading База зарегистрированных пользователей
                    button.btn.btn-default(ng-click="buttonClick_add(element)") Добавить           
                div.panel-body
                    table.table.table-striped.table-bordered.table-hover
                        thead
                            tr
                                th Фамилия
                                th Имя
                                th Отчество
                                th e-mail
                                th Тип
                                th Дата добавления
                                
                        tbody
                            tr(ng-repeat="element in user")
                                td {{element.user_lastname}}
                                td {{element.user_name}}
                                td {{element.user_surname}}
                                td {{element.email}}
                                td {{element.date_create}}
                                td {{element.date_change}}
                                td 
                                    button.btn.btn-default(ng-click="buttonClick_change(element)") Редактировать
                                    button.btn.btn-default(ng-click="buttonClick_delete(element)") Удалить
                 
            