/* app css stylesheet */

body {
    padding-top:50px;
}

#page-wrapper {
    padding: 0 15px;
}

.leftMenuActive {
    background-color: #cfffcf;
}

.uploadProgress {
    width: 400px;
    color: black;
    background-color: green;
}

.browseTable, .browseTable td, .browseTable th, .browseTable tr {
    border-spacing: 2px;
    border: 1px solid black;
    padding: 2px;
    font-size: 10px;
    white-space: nowrap;
}

table.browseTable tr:nth-child(even) {
    background-color: #eee;
}
table.browseTable tr:nth-child(odd) {
    background-color: #fff;
}

table.parserCfg td {
    vertical-align: top;
    padding: 2px;
}

.separator {
    margin-bottom: 10px;
    padding-bottom: 8px;
    border-bottom: 1px solid #E7E7E7;
}

div.cell-scrollable {
    width: 100%;
    height: 100%;
    margin: 0;
    padding: 0;
    overflow-y: auto;
    max-height: 80px;
}

.content-container {
    margin-top: 20px;
}