div(ng-controller='auditCtrl', ng-init="files=#{JSON.stringify(audits)}")
    br
    nav(class="navbar navbar-default navbar-left" role="navigation")
     div.navbar-inner
      div.container-fluid
       div.navbar-header
        a(class="navbar-brand") Audit
         //div.collapse.navbar-collapse
       form.navbar-form.navbar-left.form-inline
          div.form-group(style="")
            p.input-group
               input.form-control(type="text", datepicker-popup="", ng-model="startDate", is-open="openedStart", min-date="minDate", max-date="'2020-06-22'", datepicker-options="dateOptions", ng-required="true", close-text="Close",  style="140px")
               span.input-group-btn
                button.btn.btn-default(type="button", ng-click="openStart($event)")
                 i(class="glyphicon glyphicon-calendar")
          i.glyphicon.glyphicon-resize-horizontal
          div.form-group(style="")
            p.input-group
                input.form-control(type="text", datepicker-popup="", ng-model="endDate", is-open="openedEnd", min-date="minDate", max-date="'2020-06-22'", datepicker-options="dateOptions", ng-required="true", close-text="Close",  style="140px")
                span.input-group-btn
                 button.btn.btn-default(type="button", ng-click="openEnd($event)")
                  i(class="glyphicon glyphicon-calendar")
             
          div.form-group
            p.input-group
              select.form-control(ng-model="loglevel", ng-options="f for f in loglevels", style="120px")
                option
          button(type="submit" class="btn btn-default" style="margin-top: 0px;" ng-click="Refresh()")
              i(class="glyphicon glyphicon-refresh")

    br
    div(id="loadingWidget" class="row-fluid ui-corner-all" style="padding: 0 .7em; display: block;position:fixed;left:50%;top:40%;text-align:center;")
      div.loadingContent
        img(alt="Loading  Content" src="images/ajax-loader.gif") 
        p
          |Loading
    table(ng-table="tableParams" show-filter="true" class="table table-striped table-bordered table-condensed" style="word-wrap: break-word;")
        tr(ng-repeat="rec in audits" style="")
          td(data-title="'TimeStamp'" sortable="'TimeStamp'" style="min-width:180px;") {{rec.TimeStamp| date:'MM/dd/yyyy HH:mm:ss.sss'}}
          td(data-title="'AuditType'" sortable="'AuditType'" filter="{ 'AuditType': 'text' }"  ) {{ rec.AuditTypeName }}
          td(data-title="'Message'" sortable="'Message'" filter="{ 'Message': 'text' }" style="min-width:700px;max-width:900px;" ) 
            div.cell-scrollable {{rec.Message}}
          td(data-title="'SourceModule'" sortable="'SourceModule'" filter="{ 'SourceModule': 'text' }" style="max-width:150px;") {{ rec.SourceModule }}
          td(data-title="'Credentials'" sortable="'Credentials'" filter="{ 'Credentials': 'text' }" ) {{ rec.Credentials }}
          td(data-title="'HostIP'" sortable="'HostIP'" filter="{ 'HostIP': 'text' }"  style="max-width:150px;") 
            div.cell-scrollable {{ rec.HostIP }}
          td(data-title="'AuditSessionID'" sortable="'SessionID'" filter="{ 'SessionID': 'text' }" class='') {{ rec.SessionID }}
          td(data-title="'Id'") {{ rec.id }}

   