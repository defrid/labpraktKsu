div
    div(ng-hide='!isLoading')
        | Loading...
    .col-sm-12(ng-hide='isLoading')
        form.form-horizontal(role='form', name='parserCfgForm', ng-submit='updateCfg()')

            .panel.panel-default(style='margin-top:20px;')
                .panel-heading
                    h3.panel-title ParserConfiguration
                .panel-body
                    .form-group
                        label.col-sm-2(for='configName') Name
                        .col-sm-4
                            input.form-control(type='text', id='configName', ng-model='data.Value.ConfigName', placeholder='A unique name identifying this configuration')

                    .form-group
                        label.col-sm-2(for='entityName') Destination Entity
                        .col-sm-4
                            input.form-control(type='text', id='entityName', ng-model='data.Value.EntityName', placeholder='The destination entity to receive the parsed data')

                    .separator

                    .form-group
                        label.col-sm-2(for='gatewayName') Gateway
                        .col-sm-4
                            select.form-control(name='selGateway', ng-model='gateway', ng-disabled='isUpdating' ng-options='o.name for o in gateways')
                                option(values='') (blank)

                    .panel.panel-default
                        .panel-body
                            ng-include(src="gateway.configUrl")

                    .separator

                    .form-group
                        label.col-sm-2(for='connectorName') Connector
                        .col-sm-4
                            select.form-control(name='connectorName', ng-model='connector' ng-disabled='isUpdating' ng-options='o.name for o in connectors')
                                option(values='') (blank)

                    .panel.panel-default
                        .panel-body
                            ng-include(src="connector.configUrl")

                    .separator

                    button.btn.btn-default(type='submit', ng-disabled='isUpdating') OK
                    button.btn.btn-default(name='btnCancel', onclick='alert("Cancel what?");', ng-disabled='isUpdating') Cancel
