(function(window, angular) {
    'use strict';
    return angular.module('edm')
        .config(function($stateProvider, $urlRouterProvider, $locationProvider) {
            $locationProvider.html5Mode(true);
            $urlRouterProvider.otherwise('/');
            $stateProvider
                .state('main', {
                    abstract: true,
                    templateUrl: 'views/layout.html',
                    controller: 'MainController'
                })
                .state('main.start', {
                    url: '/'
                })
                .state('main.auditview', {
                    url: '/auditview',
                    templateUrl: 'views/partials/auditview.html',
                    controller: 'auditCtrl'
                })
                .state('main.browse', {
                    url: '/browse',
                    templateUrl: 'views/partials/browse.html',
                    controller: 'BrowseController'
                })
                .state('main.files', {
                    url: '/files',
                    templateUrl: 'views/partials/files.html',
                    controller: 'fileUploadCtrl'
                })
                .state('main.logview', {
                    url: '/logview',
                    templateUrl: 'views/partials/logview.html',
                    controller: 'logviewCtrl'
                })
                .state('main.parsercfg', {
                    url: '/parsercfg',
                    templateUrl: 'views/partials/parsercfg.html',
                    controller: 'parserCfgCtrl'
                })
                .state('main.trace', {
                    url: '/trace',
                    templateUrl: 'views/partials/trace.html'
                })
                .state('main.users', {
                    url: '/users',
                    templateUrl: 'views/partials/users.html'
                })

                .state('login', {
                    url: '/login',
                    templateUrl: 'views/partials/login.html',
                    controller: "LoginController"
                })
            ;
        });
})(window, window.angular);

