    br
    div(id="loadingWidget" class="row-fluid ui-corner-all" style="padding: 0 .7em; display: block;position:fixed;left:50%;top:40%;text-align:center;")
      div.loadingContent
        img(alt="Loading  Content" src="images/ajax-loader.gif") 
        p
          |Loading
    table(ng-table="tableParams" show-filter="true" class="table table-striped table-bordered table-condensed" style="word-wrap: break-word;")
        tr(ng-repeat="file in logs" style="")
          td(data-title="'TimeStamp'" sortable="'TimeStamp'" style="min-width:180px;") {{file.TimeStamp| date:'MM/dd/yyyy HH:mm:ss.sss'}}
          td(data-title="'Message'" sortable="'Message'" filter="{ 'Message': 'text' }" style="min-width:700px;max-width:900px;" )
              div.cell-scrollable {{file.Message}}
          td(data-title="'LoggerName'" sortable="'LoggerName'" filter="{ 'LoggerName': 'text' }" style="max-width:150px;") {{ file.LoggerName }}
          td(data-title="'Domain'" sortable="'Domain'" filter="{ 'Domain': 'text' }" ) {{ file.Domain }}
          td(data-title="'Level'" sortable="'Level'" filter="{ 'Level': 'text' }" class='') {{ file.Level }}
          td(data-title="'HostIP'" sortable="'HostIP'" filter="{ 'HostIP': 'text' }"  style="max-width:150px;")
              div.cell-scrollable {{ file.HostIP }}
          td(data-title="'UserName'" sortable="'UserName'" filter="{ 'UserName': 'text' }"  ) {{ file.UserName }}
          td(data-title="'LocationInfo'") {{ file.LocationFullInfo }}
          td(data-title="'Identity'") {{ file.Identity }}

