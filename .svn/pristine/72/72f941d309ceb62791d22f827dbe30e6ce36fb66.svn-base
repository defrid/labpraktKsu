div(ng-controller="logviewCtrl", ng-init="files=#{JSON.stringify(files)}")
    br
    nav(class="navbar navbar-default navbar-left" role="navigation")
     div.navbar-inner
      div.container-fluid
       div.navbar-header
        a(class="navbar-brand") Logs
         //div.collapse.navbar-collapse
       form.navbar-form.navbar-left.form-inline
          div.form-group(style="")
            p.input-group
               input.form-control(type="text", datepicker-popup="", ng-model="startDate", is-open="openedStart", min-date="minDate", max-date="'2020-06-22'", datepicker-options="dateOptions", ng-required="true", close-text="Close",  style="140px")
               span.input-group-btn
                button.btn.btn-default(type="button", ng-click="openStart($event)")
                 i(class="glyphicon glyphicon-calendar")
          i.glyphicon.glyphicon-resize-horizontal
          div.form-group(style="")
            p.input-group
                input.form-control(type="text", datepicker-popup="", ng-model="endDate", is-open="openedEnd", min-date="minDate", max-date="'2020-06-22'", datepicker-options="dateOptions", ng-required="true", close-text="Close",  style="140px")
                span.input-group-btn
                 button.btn.btn-default(type="button", ng-click="openEnd($event)")
                  i(class="glyphicon glyphicon-calendar")
             
          div.form-group
            p.input-group
              select.form-control(ng-model="loglevel", ng-options="f for f in loglevels", style="120px")
                option
          button(type="submit" class="btn btn-default" style="margin-top: 0px;" ng-click="Refresh()")
              i(class="glyphicon glyphicon-refresh")
      
